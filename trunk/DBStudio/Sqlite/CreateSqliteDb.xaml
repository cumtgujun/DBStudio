<cx:BaseFadeDialog x:Class="DBStudio.Sqlite.CreateSqliteDb"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                    xmlns:Translator="clr-namespace:DBStudio.Bases"
                 xmlns:Localizer="clr-namespace:DBStudio.Bases"
        xmlns:cx="clr-namespace:DBStudio.BaseUI"
    Title="Create Sqlite Database" WindowStartupLocation="CenterScreen" Height="271" Width="510">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,2,0,0">
                <TextBlock Width="120" Text="{Localizer:Translate TitleNewSqliteFile}"/>
                <TextBox x:Name="txtSqlFile" Width="298"></TextBox>
                <Button Content="..." Click="butSelectSave_Click" x:Name="butSave" Width="40" Height="29"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,2,0,0">
                <TextBlock Width="120" Text="{Localizer:Translate LabelPassword}"></TextBlock>
                <PasswordBox Width="188" x:Name="pwd" Height="29" ></PasswordBox>
            </StackPanel>
            <StackPanel Margin="0,10,0,0">
                <Button x:Name="butCreate" Content="{Localizer:Translate ButtonCreate}" Width="80" Height="30"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</cx:BaseFadeDialog>
