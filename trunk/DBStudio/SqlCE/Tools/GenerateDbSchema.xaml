<cx:BaseFadeDialog x:Class="DBStudio.SqlCE.Tools.GenerateDbSchema"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cx="clr-namespace:DBStudio.BaseUI"
    Title="Generate database schema" Height="369" Width="456">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                <Label Width="120" Content="Table List"></Label>
                <ListBox Width="300" x:Name="tableList" Height="166"></ListBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                <Label Width="120" Content="Gernate Type"></Label>
                <ComboBox x:Name="cmbGenType" Width="120"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,20,0,0">
                <Label Width="120" Content="Output mode"></Label>
                <ComboBox x:Name="cmbOutputMdoe" Width="120"></ComboBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10,20,0,0"  HorizontalAlignment="Center">
                <Button x:Name="butGenerateSchema" Width="120" Content="Generate" Height="28" Click="butGenerateSchema_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</cx:BaseFadeDialog>
