<cx:BaseFadeDialog x:Class="DBStudio.Effiproz.ChangeEffiprozDbPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                           xmlns:cx="clr-namespace:DBStudio.BaseUI"
                                    xmlns:Translator="clr-namespace:DBStudio.Bases"
                 xmlns:Localizer="clr-namespace:DBStudio.Bases"
        Title="ChangeEffiprozDbPassword" mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="95" SizeToContent="WidthAndHeight">
    <Grid Margin="10">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock MinWidth="100" Text="{Localizer:Translate TitleNewPwd}"/>
                <PasswordBox x:Name="txtPwd" MinWidth="200" />
            </StackPanel>
            <Button Width="100" Margin="5" Content="{Localizer:Translate OkButtonText}" Click="Button_Click" />
        </StackPanel>
    </Grid>
</cx:BaseFadeDialog>
