<UserControl x:Class="DBStudio.MyInterfaceImplementations.MyAdvTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:MyCustomControl="clr-namespace:CodeBoxControl;assembly=CodeBoxControl" 
             mc:Ignorable="d" 
             >
    <MyCustomControl:CodeBox x:Name="myBox" AcceptsReturn="True" AcceptsTab="True"
                             IsUndoEnabled="True" VerticalScrollBarVisibility="Visible"
                             KeyDown="myBox_KeyDown"/>
</UserControl>
