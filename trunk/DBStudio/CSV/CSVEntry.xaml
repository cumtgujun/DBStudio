<UserControl x:Class="DBStudio.CSV.CSVEntry"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:Translator="clr-namespace:DBStudio.Bases"
                 xmlns:Localizer="clr-namespace:DBStudio.Bases"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="10" HorizontalAlignment="Right">
                <TextBlock Text="{Localizer:Translate LabelOpenCSVFile}" Margin="0,0,10,0"  />
                <TextBox Name="txtSrcFile" TextWrapping="Wrap" Height="29" Width="320"  />
                <Button Click="butSelectSource_Click" Name="butSelectSource">....</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button HorizontalAlignment="Right" Name="butExample" Width="100" Height="20" Margin="10" Content="{Localizer:Translate ButtonOpenExample}" Click="butExample_Click" />
                <Button HorizontalAlignment="Right" Name="butGo" Width="100" Height="30" Margin="10" Content="{Localizer:Translate ButtonOpen}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
