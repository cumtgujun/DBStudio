<UserControl x:Class="DBStudio.DataExchangeCenter.SelectTargetDb_SqlCe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <Label Content="Please input or select a sqlce file path, if you input a not existed file,we will create for you."></Label>
            <StackPanel Orientation="Horizontal" Margin="10,10,0,0">
                <TextBox x:Name="txtSSCEFilePath" Width="400"></TextBox>
                <Button Click="butSelectSSCEFile_Click" x:Name="butSelectSSCEFile" Width="20" Height="20" Content="..."></Button>
            </StackPanel>
            <Label Foreground="Red" Content="Please select file" Visibility="Collapsed" x:Name="labelWarning"></Label>
        </StackPanel>
    </Grid>
</UserControl>
