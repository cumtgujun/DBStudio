<UserControl x:Class="DBStudio.DataExchangeCenter.SelectSSCEFile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,20,0,0">
                <Label Width="120" Content="Database"></Label>
                <TextBox x:Name="txtDbPath" Width="380"></TextBox>
                <Button Content="..." MinWidth="40" Height="20" x:Name="butSelectFile" Click="butSelectFile_Click"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,20,0,0">
                <Label Width="120" Content="Password"/>
                <PasswordBox x:Name="txtPwd" Width="300"></PasswordBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,20,0,0">
                <Label Content="Encrypt" Width="120"></Label>
                <CheckBox x:Name="chkIsEncrypted" Content="Is Encrypted" IsChecked="True" Width="120"></CheckBox>
            </StackPanel>
            <Label Foreground="Red" Content="Please input the necessary field" Margin="30,5,0,0" Visibility="Collapsed" x:Name="labelWarning"></Label>

        </StackPanel>
    </Grid>
</UserControl>
