<cx:BaseFadeDialog x:Class="DBStudio.CommonUI.DocumentDb"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cx="clr-namespace:DBStudio.BaseUI"
                           xmlns:Localizer="clr-namespace:DBStudio.Bases"
    xmlns:BaseControl="clr-namespace:MPL.MyControls;assembly=MPL"
    Title="{Localizer:Translate DocumentingDbButtonContent}" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <BaseControl:CommandBar x:Name="cmdBar" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"
                                Grid.ColumnSpan="2" PressOKButton="cmdBar_PressOKButton"
                                PressCancelButton="cmdBar_PressCancelButton"/>
    </Grid>
</cx:BaseFadeDialog>
